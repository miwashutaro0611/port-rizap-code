@import _import
header
  position absolute
  z-index 9000
  top 0
  width 100%
  height 86px
  background #fff
  border-bottom 4px solid #000
  h1
    padding 18px 36px
    img
      width 100%
  #nav_btn
    display none
  nav
    padding 36px
    ul
      li
        font-size 14px
        padding 0 30px 0 0
        a
          color #000
footer
  position relative
  p
    font-size 11px
    padding 50px 0
    color #fff
    background #3f4146
  .page-top
    position absolute
    right 20px
    bottom 109px
    .circle
      width 85px
      height 85px
      margin 0 auto
      padding 20px 0
      font-size 14px
      color #fff
      line-height 1.6
      background #221f1e
      border-radius 50%
      box-sizing border-box
@media (max-width: 900px)
  header
    //ここからハンバーガー
    #nav_btn
      position absolute
      top 20px
      right 20px
      cursor pointer
      z-index 9999
      border 3px solid #000
      border-radius 5px
      display inline-block
      transition all .3s
      box-sizing border-box
    .menu-trigger
      position relative
      width 50px
      height 50px
      display inline-block
      transition all .3s
      box-sizing border-box
      span
        display inline-block
        transition all .3s
        box-sizing border-box
        position absolute
        left 10%
        width 80%
        height 4px
        background #000
        border-radius 4px
        &:nth-of-type(1)
          top 10px
        &:nth-of-type(2)
          top 20px
        &:nth-of-type(3)
          bottom 10px
      &.active span
        &:nth-of-type(1)
          transform translateY(10px) rotate(-45deg)
        &:nth-of-type(2)
          opacity 0
        &:nth-of-type(3)
          transform translateY(-10px) rotate(45deg)
    //ここまでハンバーガー
    nav
      display none
      width 100%
      padding 0
      background #fff
      ul
        li
          width 100%
          text-align center
          border-bottom 1px solid #000
          a
            display block
            width 100%
            padding 20px 0
