@import 'include/_style.styl'
#main
  background url(../img/index/main_back.png) no-repeat
  background-position top
  background-size 100% auto
  .inner
    padding 15% 0 10%
    img
      width 45%
    h2
      font-weight normal
      font-size 24px
      color #fff
#sub-nav
  background linear-gradient(90deg, #015f9c 50%, #095d41 50%)
  ul
    li
      display table
      width (100% / 3)
      height 200px
      text-align center
      &:nth-child(1)
        arrow-back #0067a9,#005d99
      &:nth-child(2)
        arrow-back #063582,#032f77
      &:nth-child(3)
        arrow-back #0d6245,#085a3e
      a
        position relative
        display table-cell
        vertical-align middle
        color #fff
        line-height 1.7
        span
          position absolute
          z-index 100
          width 40px
          height 40px
          left 45%
          bottom -10%
          &:before,&:after
            content ''
            position absolute
            z-index 10
            top 0
            width 0
            height 0
            border-top 20px solid transparent
            border-bottom 20px solid transparent
          img
            position relative
            top 15%
            z-index 100
            width 30%
#contents-wrap
  background #f7f8fa
  .inner
    padding 1px 0 185px
    background #fff
    #content01
      content-wrap 150px url(../img/index/key_v01.png) #11639d
    #content02
      content-wrap 130px url(../img/index/key_v02.png) #032f77
    #content03
      content-wrap 130px url(../img/index/key_v03.png) #085a3e

@media (max-width: 1200px)
  #main
    background-size auto 100%
    background-position bottom

@media (max-width: 767px)
  #main
    .inner
      padding 40% 0 20%
  #sub-nav
    ul
      li
        width 100%
        height 100px
        a
          span
            left 85%
            bottom 35%
            &:before,&:after
              border none
  #contents-wrap
    .inner
      padding 0
      #content01,#content02,#content03
        padding 0
